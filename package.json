{
    "name": "qucat-circuit-generator",
    "version": "1.0.0",
    "description": "A project for generating and testing circuits",
    "main": "src/gui/main.js",
    "scripts": {
        "test": "npx mocha 'tests/**/*.test.js' --require ./tests/setup.js",
        "bundle": "esbuild src/gui/main.js --minify --format=esm --bundle --outdir=dist/static --asset-names=assets/[name] --loader:.png=dataurl",
        "copy": "cp -r assets dist/assets && cp src/gui/gui.html dist/",
        "menu:build": "node scripts/build-menu-config.mjs",
        "build": "npm run menu:build && npm run bundle && npm run copy && npm run menu:build",
        "serve": "npm run build && http-server -c-1"
    },
    "type": "module",
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "canvas": "^3.1.0",
        "chai": "^4.5.0",
        "esbuild": "^0.25.4",
        "jsdom": "^26.0.0",
        "mocha": "^10.0.0",
        "sinon": "^19.0.2",
        "yaml": "^2.8.1"
    }
}
